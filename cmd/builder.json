{
  "productName": "ee",
  "appId": "com.electron.secs-simulator",
  "copyright": "Â© 2025 LostCat-Qian",
  "directories": {
    "output": "out"
  },
  "asar": true,
  "files": ["**/*", "!cmd/", "!data/", "!electron/", "!frontend/", "!logs/", "!out/", "!go/", "!python/"],
  "extraFiles": [
    {
      "from": "engines/",
      "to": "engines"
    },
    {
      "from": "sml/",
      "to": "sml"
    },
    {
      "from": "auto-reply-scripts/",
      "to": "auto-reply-scripts"
    },
    {
      "from": "secs-logs/",
      "to": "secs-logs"
    },
    {
      "from": "autoflows/",
      "to": "autoflows"
    }
  ],
  "extraResources": {
    "from": "build/extraResources/",
    "to": "extraResources"
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "build/icons/icon.ico",
    "uninstallerIcon": "build/icons/icon.ico",
    "installerHeaderIcon": "build/icons/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "secs-simulator"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "https://github.com/LostCat-Qian/secs-simulator"
    }
  ],
  "win": {
    "icon": "build/icons/icon.ico",
    "artifactName": "${productName}-${os}-${version}-${arch}.${ext}",
    "target": [
      {
        "target": "portable"
      }
    ]
  }
}
